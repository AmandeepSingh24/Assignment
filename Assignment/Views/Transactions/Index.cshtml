@model IEnumerable<Assignment.Controllers.TransactionsController.DisplayTransaction>

@{
    ViewData["Title"] = "Transactions List";
}

<h1>Transactions List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">+Add Transaction</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Description
            </th>
            <th>
                Credit
            </th>
            <th>
                Debit
            </th>
            <th>
                Running Balance
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Date.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @(item.Credit.HasValue ? item.Credit.Value.ToString("C") : "-")
                </td>
                <td>
                    @(item.Debit.HasValue ? item.Debit.Value.ToString("C") : "-")
                </td>
                <td>
                    @item.RunningBalance.ToString("C")
                </td>
            </tr>
        }
    </tbody>
</table>
